<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="Customer" class="Customer">
		<property name="customerId" value="123" />
		<property name="customerName" value="abc" />
		<property name="customerContact" value="1234567890" />
		<property name="customerAddress" ref="zeroPoint" />
	</bean>

	
	<bean id="zeroPoint" class="Address">
		<property name="street" value="lane 001" />
		<property name="city" value="Chori bazzar" />
		<property name="state" value="Delhi" />
		<property name="zip" value="100012" />
		<property name="country" value="India" />
	</bean>
	
</beans>